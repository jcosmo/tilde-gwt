<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:c="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .userPane {
      background: white;
    }
  </ui:style>
  <ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="northData">
    <ui:attributes size="40"/>
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="verticalLayoutData">
    <ui:attributes width="1" height="-1"/>
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="descriptionLayoutData">
    <ui:attributes width="1" height="100"/>
  </ui:with>

  <container:SimpleContainer addStyleNames="{style.userPane}">
    <container:child>
      <container:BorderLayoutContainer borders="false">
        <container:west>
          <container:BorderLayoutContainer borders="false">
            <container:north layoutData="{northData}">
              <g:Button text="Add User" ui:field="_addUserButton"/>
            </container:north>
            <container:center>
              <gxt:ListView ui:field="_userList"/>
            </container:center>
          </container:BorderLayoutContainer>
        </container:west>
        <container:center>
          <g:VerticalPanel spacing="10">
            <c:ContentPanel width="350" headerVisible="false" borders="false" bodyBorder="false" bodyStyle="background: none; padding: 5px">
              <container:VerticalLayoutContainer>
                <container:child layoutData="{verticalLayoutData}">
                  <form:FieldLabel text="Name">
                    <form:widget>
                      <form:TextField ui:field="_userName" allowBlank="false" emptyText="Select a user or 'add'"/>
                    </form:widget>
                  </form:FieldLabel>
                </container:child>
              </container:VerticalLayoutContainer>
              <c:button>
                <button:TextButton text="Save"/>
              </c:button>
              <c:button>
                <button:TextButton text="Cancel"/>
              </c:button>
            </c:ContentPanel>
          </g:VerticalPanel>
        </container:center>
      </container:BorderLayoutContainer>
    </container:child>
  </container:SimpleContainer>
</ui:UiBinder>